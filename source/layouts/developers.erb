<% area_tabs = current_page.data.area_tabs || [] %>
<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title><%= current_page.data.title || "Red Hat iPaaS" %></title>

    <style>
      <%= Rouge::Themes::MonokaiSublime.render(:scope => '.highlight') %>
    </style>
    <%= stylesheet_link_tag :screen, media: :screen %>
    <%= stylesheet_link_tag :print, media: :print %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <% if current_page.data.search %>
      <%= javascript_include_tag  "all" %>
    <% else %>
      <%= javascript_include_tag  "all_nosearch" %>
    <% end %>
    <%= favicon_tag 'images/favicon.ico' %>
  </head>

  <body class="<%= page_classes %>" data-areas="<%=h area_tabs.map{ |area| area.is_a?(Hash) ? area.keys.first : area }.to_json %>">
    <%= partial "includes/announcement" %>
    <%= partial "includes/navbar" %>

    <a href="#" id="nav-button">
      <span>
        NAV
        <%= image_tag('navbar.png') %>
      </span>
    </a>
    <div class="tocify-wrapper">
      <% if area_tabs.any? %>
        <div class="area-selector">
          <% area_tabs.each do |area| %>
            <% if area.is_a? Hash %>
              <a href="#" data-area-name="<%= area.keys.first %>"><%= area.values.first %></a>
            <% else %>
              <a href="#" data-area-name="<%= area %>"><%= area %></a>
            <% end %>
          <% end %>
        </div>
      <% end %>
      <% if current_page.data.search %>
        <div class="search">
          <input type="text" class="search" id="input-search" placeholder="Search">
        </div>
        <ul class="search-results"></ul>
      <% end %>
      <div id="toc">
      </div>
      <% if current_page.data.toc_footers %>
        <ul class="toc-footer">
          <% current_page.data.toc_footers.each do |footer| %>
            <li><%= footer %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
    <div class="page-wrapper">
      <div class="dark-box"></div>
      <div class="content">
        <%= yield %>
        <% current_page.data.includes && current_page.data.includes.each do |include| %>
          <%= partial "includes/#{include}" %>
        <% end %>
      </div>
      <div class="dark-box">
        <% if area_tabs.any? %>
          <div class="area-selector">
            <% area_tabs.each do |area| %>
              <% if area.is_a? Hash %>
                <a href="#" data-area-name="<%= area.keys.first %>"><%= area.values.first %></a>
              <% else %>
                <a href="#" data-area-name="<%= area %>"><%= area %></a>
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </body>
</html>
